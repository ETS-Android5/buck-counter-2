<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/account_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/account_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/account" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/account_context_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sharp_more_vert_24"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="-5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@id/account_icon"
                android:layout_toStartOf="@id/account_balance"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/account_context_menu"
                android:layout_alignWithParentIfMissing="true"/>
            <RelativeLayout android:id="@+id/credit_card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/account_icon"
                android:layout_alignParentBottom="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/credit_limit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/credit_limit"
                    android:text="@string/credit_limit_label"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/credit_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/credit_limit_label"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/remaining_credit_limit_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/remaining_credit_limit"
                    android:text="@string/remaining_credit_limit_label"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/remaining_credit_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/remaining_credit_limit_label"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>